@*@model IEnumerable<Product>*@
@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Index";
    int counter = 0;
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Market" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Product
            </a>
        </div>
    </div>

</div>




<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                title
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Total price with VAT
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var productViewModel in Model)
        {
            <tr>
                <td width="8%">
                    @productViewModel.Product.Id
                </td>
                <td width="30%">
                    @productViewModel.Product.title
                </td>

                <td width="8%">
                    @productViewModel.Product.Quantity
                </td>
                <td width="10%">
                    @productViewModel.Product.Price
                </td>
                <td width="30%">
                    @productViewModel.TotalPriceWithVat
                </td>




                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Market" asp-action="Edit" asp-route-id="@productViewModel.Product.Id"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>

                        <a asp-controller="Market" asp-action="Delete" asp-route-id="@productViewModel.Product.Id"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>