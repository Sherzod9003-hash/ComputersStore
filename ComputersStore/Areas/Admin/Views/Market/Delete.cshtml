@model Market.Models.Product



<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="title">Title</label>
            <input asp-for="title" class="form-control" />

        </div>
        <div class="mb-3">

            <label asp-for="Quantity">Quantity</label>
            <input asp-for="Quantity" class="form-control" />


        </div>
        <div class="mb-3">

            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" />

        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Market" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to list</a>
    </div>

</form>
